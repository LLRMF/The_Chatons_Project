<!-- carts/show.html.erb -->
<h1>Votre Panier</h1>
<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |cart_item| %>
      <li>
        <%= cart_item.item.title %> - <%= cart_item.quantity %>
        <%= button_to "Retirer du panier", remove_item_path(item_id: cart_item.item.id), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Dommage, votre panier est vide !</p>
  <p>Allez vite le remplir, on se retrouve après.</p>
<% end %>
