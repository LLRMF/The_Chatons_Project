<h1>liste items</h1>




<div class="container mt-5">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <img src="<%= item.image_url %>" class="card-img-top img-fluid">
          <div class="card-body">
            <h2 class="card-title text-center"><%= item.title %></h2>
            <p><strong>Prix :</strong> <%= item.price %></p>
            <%= link_to "Voir en dÃ©tails", item_path(item) , class: "btn btn-dark btn-lg" %>
            <%= button_to "Ajouter au panier", add_to_cart_item_path(item.id), remote: true, method: :post, form_class: "form-inline", class: "btn btn-dark btn-lg add-to-cart", data: { item_id: item.id } %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
